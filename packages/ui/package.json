{
  "name": "@fedibtc/ui",
  "version": "0.0.1",
  "description": "UI components for Fedi Mods",
  "scripts": {
    "build": "rm -rf dist && tailwindcss -i ./src/components.css -o ./dist/components.css && cp -r ./src/fonts ./dist/fonts && tsup src/index.ts  --sourcemap --dts --format esm,cjs,iife --global-name fedibtc"
  },
  "devDependencies": {
    "@types/react": "^18",
    "autoprefixer": "^10.4.16",
    "esbuild": "^0.15.18",
    "postcss": "^8.4.32",
    "react": "^18",
    "react-dom": "^18",
    "tsup": "^6.6.3"
  },
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./src/index.ts",
      "import": {
        "default": "./src/index.ts"
      }
    },
    "./dist/components.css": "./dist/components.css"
  },
  "types": "./src/index.ts",
  "publishConfig": {
    "types": "./dist/index.d.ts",
    "exports": {
      "./package.json": "./package.json",
      ".": {
        "types": "./dist/index.d.ts",
        "import": {
          "default": "./dist/index.js"
        },
        "default": "./dist/index.cjs",
        "require": "./dist/index.js"
      },
      "./styles": "./dist/components.css"
    }
  },
  "type": "module",
  "unpkg": "dist/index.global.js",
  "files": [
    "dist/*"
  ],
  "dependencies": {
    "@nostr-dev-kit/ndk": "^2.0.3",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-radio-group": "^1.1.3",
    "@radix-ui/react-toast": "^1.1.5",
    "@tabler/icons-react": "^2.40.0",
    "@webbtc/webln-types": "^2.1.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "qr-scanner": "^1.4.2",
    "qrloop": "^1.4.1",
    "react-qr-code": "^2.0.12",
    "tailwind-merge": "^1.14.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.22.4"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  }
}
